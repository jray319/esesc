# Include files
##########################################################
<gpu.conf> # GPU simulation include file
<simu.conf> # simulated CPU settings #[sizhuo] DO NOT USE simu.conf.exynos4
<pwth.conf>  # thermal configuration
<peq.conf>    # LibPeq equations

##########################################################
# Power settings 
##########################################################
[ThisSOCTech]
frequency      = 1700e6 # frequency Hz
tech  = 32
devType = 0  # 0: HP, 1: LSTP, 2: LOP
machineBits = 64
phyAddrBits = 54
virAddrBits = 64
scaleDynPow = 0.6
scaleLkgPow = 1.2

##########################################################
#  EMULATOR   CONFIGURATION   
##########################################################

[QEMUSectionCPU]
type      = "qemu"
dorun     = true
sampler   = "$(samplerSel)"
syscall   = "NoSyscall"
params[0] = "$(benchName)"

[NoSyscall]
enable   = false
generate = false
runtime  = false

##########################################################
# Sampler configuration         
##########################################################

[nosampler]
type               = "inst"
nInstSkip          = 1
nInstSkipThreads   = 1
maxnsTime         =  1e12 # required # [sizhuo] 1e12 seems to be max
nInstMax           = 1e15 # [sizhuo] maximum # of inst simulated
nInstRabbit       = 0
nInstWarmup       = 0
nInstDetail       = 0
nInstTiming       = 2e15 # [sizhuo] inst for timing: larger than nInstMax
PowPredictionHist = 5
doPowPrediction   = 1

[SkipAll]
type               = "inst"
nInstSkip          = 1e9
nInstSkipThreads   = 1
nInstMax           = 1e9
nInstRabbit       = 2e9
nInstWarmup       = 0
nInstDetail       = 0
nInstTiming       = 0

[TASS]
type              = "inst"
nInstSkip         = 1
nInstSkipThreads  = 1
maxnsTime         = 3e8
nInstMax          = 3e8
nInstRabbit       = 250e4
nInstWarmup       = 245e4
nInstDetail       = 2e4
nInstTiming       = 13e4
PowPredictionHist = 5
doPowPrediction   = 1

[TBS]
type              = "time"
nInstSkip         = 1
nInstSkipThreads  = 1
maxnsTime         = 3e8
nInstMax          = 1e8
# using prime numbers
#nInstRabbit       =  180181
